{% extends 'admin/base_admin.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('admin_category_index') }}">Revenir à la liste</a>

    <a class="btn btn-success" href="{{ path('admin_category_edit', {'id': category.id}) }}">Modifier</a>

    {{ include('admin/category/_delete_form.html.twig') }}
{% endblock %}
